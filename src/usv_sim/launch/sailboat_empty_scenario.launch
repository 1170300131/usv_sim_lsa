<?xml version="1.0"?>
<launch>

	<arg name="gui" default="false"/>
	<arg name="parse" default="false"/>

    <!-- Launch Gazebo with empty world -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch" unless="$(arg parse)">
        <arg name="use_sim_time" value="true" />
        <arg name="debug" value="false" />
        <arg name="gui" value="true" />
        <arg name="paused" value="true"/>
        <arg name="verbose" value="true"/>
        <arg name="world_name" value="$(find usv_sim)/world/empty.world"/>
    </include>

	<!-- parse launch file -->
	<group if="$(arg parse)">
		<node name="scene_to_spawner" pkg="freefloating_gazebo" type="uwsim_scene_to_gazebo_spawner.py" args="$(find usv_sim)/launch/sailboat_empty_scenario.launch" output="screen" required="true"/>
	</group>
    <!-- spawn uwsim -->
	<group unless="$(arg parse)">
		<arg name="disableShaders" default="false"/>
		<!-- launch uwsim -->
		<node name="uwsim" pkg="uwsim" type="uwsim" args="$(arg disableShaders) --dataPath $(find usv_sim) --configfile scenes/sailboat_empty_scenario.xml" respawn="false" required="true"/>

		<!-- using parser  -->
		<include file="$(find usv_sim)/launch/sailboat_empty_scenario_spawner.launch"/>
	    
	</group>

	<group unless="$(arg parse)">
			<arg name="namespace" default="sailboat"/>  
	    	<arg name="spawnerUsed" default="true"/>
            <node name="patrol" pkg="usv_navigation" type="patrol_pid.py" ns="sailboat" unless="$(arg gui)" output="screen"/>
            <!--node name="patrol" pkg="usv_navigation" type="sailboat_patrol_pid.py" ns="sailboat" unless="$(arg gui)" output="screen"/-->
            <node name="heading_control" pkg="usv_base_ctrl" type="sailboat_control_heading.py" ns="sailboat" unless="$(arg gui)" output="screen" />

            <!--node name="empty_scenario" pkg="usv_navigation" type="sail_empty_scenario.py" ns="sailboat" unless="$(arg gui)" output="screen"/-->
            <!--node name="empty_scenario_control" pkg="usv_navigation" type="sail_empty_scenario.py" ns="sailboat" unless="$(arg gui)" output="screen" /-->

			<include file="$(find usv_sim)/launch/models/spawn_sailboat.launch" pass_all_args="true"/>
	</group>

</launch>
