<?xml version="1.0"?>
<launch>

	<arg name="gui" default="false"/>
	<arg name="parse" default="false"/>

    <!-- Launch Gazebo with empty world -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch" unless="$(arg parse)">
        <arg name="use_sim_time" value="true" />
        <arg name="debug" value="false" />
        <arg name="gui" value="true" />
        <arg name="paused" value="true"/>
        <arg name="verbose" value="true"/>
        <arg name="world_name" value="$(find usv_sim)/world/empty.world"/>
    </include>


	<!-- parse launch file -->
	<group if="$(arg parse)">
		<node name="scene_to_spawner" pkg="freefloating_gazebo" type="uwsim_scene_to_gazebo_spawner.py" args="$(find usv_sim)/launch/airboat_scenario_j1.launch" output="screen" required="true"/>
	</group>
    <!-- spawn uwsim -->
	<group unless="$(arg parse)">
		<arg name="disableShaders" default="false"/>
		<!-- launch uwsim -->
		<node name="uwsim" pkg="uwsim" type="uwsim" args="$(arg disableShaders) --dataPath $(find usv_sim) --configfile scenes/airboat_scenario_j1.xml" respawn="false" required="true"/>


		<!-- using parser  -->
		<include file="$(find usv_sim)/launch/airboat_scenario_j1_spawner.launch"/>
	    
	</group>

    
	<group unless="$(arg parse)">
		<arg name="namespace" default="airboat"/>  
	    <arg name="spawnerUsed" default="true"/>
		<node name="patrol" pkg="usv_navigation" type="patrol_pid_scene_j1.py" ns="airboat"  unless="$(arg gui)" output="screen" />
		
		<include file="$(find usv_sim)/launch/models/spawn_airboat.launch" pass_all_args="true"/>
		
		
		<node pkg="rosbag" type="record" name="record_airboat" args="-O $(env HOME)/bags/journal_2018/airboat_scenario_j1d.bag /airboat/state" output="screen"/>
		
		
	</group>
</launch>
