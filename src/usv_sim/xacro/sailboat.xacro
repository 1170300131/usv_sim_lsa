<?xml version="1.0"?>

<robot name="sailboat" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="$(find usv_sim)/xacro/boat_common.xacro" />

    <link name="sail">
		<inertial>
			<mass value="0.1" />
			<inertia
			  ixx="0.4708"
			  ixy="0.0"
			  iyy="0.5208"
			  ixz="0.0"
			  iyz="0.0"
			  izz="0.0508"/>
		</inertial>

	    <collision name="collision">
            <geometry>
              <box size="0.4 0.02 1" />
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0"/>
	    </collision>

	    <visual name="visual">
            <geometry>
              <box size="0.4 0.02 1" />
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0"/>
	    </visual>
    </link>

    <joint name="sail_joint" type="revolute">
        <parent link="base_link"/>
        <child link="sail"/>
        <origin rpy="0 0 ${PI/2}" xyz="0 0 +0.6"/>
        <dynamics damping="1.0"/>
        <axis xyz="0 0 1"/>
        <limit effort="30" velocity="5" lower="-${PI/2}" upper="${PI/2}" />
    </joint>

    <!-- Plugin list -->
    <gazebo>
    <!-- Gazebo plugin listens to the body-->
    <!--<plugin name="LiftDragWW" filename="libLiftDragPlugin.so">-->
    <plugin name="LiftDrag" filename="libliftdragww.so">
        <a0>0</a0>
        <cla>2.752798721</cla>
        <cda>2.6417112299</cda>
        <cma>-1.8</cma>
        <alpha_stall>0.785</alpha_stall>
        <cla_stall>-3.85</cla_stall>
        <cda_stall>-0.9233984055</cda_stall>
        <cma_stall>0</cma_stall>
        <cp>0 0 0</cp>
        <area>0.4</area>
        <air_density>1.2041</air_density>
        <forward>1 0 0</forward>
        <upward>0 1 0</upward>
        <link_name>sail</link_name>
        <!--<control_joint_name>rudder_joint</control_joint_name>-->
        <!--<control_joint_rad_to_cl>4.0</control_joint_rad_to_cl>-->
  </plugin>
  </gazebo>

</robot>
