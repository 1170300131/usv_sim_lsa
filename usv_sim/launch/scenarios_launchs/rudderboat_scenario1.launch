<?xml version="1.0"?>
<launch>

	<arg name="gui" default="false"/>
	<arg name="parse" default="false"/>

    <!-- Launch Gazebo with empty world -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch" unless="$(arg parse)">
        <arg name="use_sim_time" value="true" />
        <arg name="debug" value="false" />
        <arg name="gui" value="true" />
        <arg name="paused" value="true"/>
        <arg name="verbose" value="true"/>
        <arg name="world_name" value="$(find usv_sim)/world/empty.world"/>
    </include>

	<!-- parse launch file -->
	<group if="$(arg parse)">
		<node name="scene_to_spawner" pkg="freefloating_gazebo" type="uwsim_scene_to_gazebo_spawner.py" args="$(find usv_sim)/launch/rudderboat_scenario1.launch" output="screen" required="true"/>
	</group>
    <!-- spawn uwsim -->
	<group unless="$(arg parse)">
		<arg name="disableShaders" default="false"/>
		<!-- launch uwsim -->
		<node name="uwsim" pkg="uwsim" type="uwsim" args="$(arg disableShaders) --dataPath $(find usv_sim) --configfile scenes/rudderboat_scenario1.xml" respawn="false" required="true"/>


		<!-- using parser  -->
		<include file="$(find usv_sim)/launch/rudderboat_scenario1_spawner.launch"/>
	    
	</group>

	<group unless="$(arg parse)">
		<arg name="namespace" default="rudderboat"/>  
	    	<arg name="spawnerUsed" default="true"/>
	        <node name="patrol" pkg="usv_navigation" type="patrol_pid_scene1.py" ns="rudderboat" unless="$(arg gui)"/>
		<include file="$(find usv_sim)/launch/models/spawn_rudderboat.launch" pass_all_args="true"/>
		<node pkg="rosbag" type="record" name="record_rudderboat" args="-O /home/paravisi/usv_sim_lsa/bags/novorudderboat_scenario1_alto.bag /rudderboat/state" output="screen"/>
	</group>

</launch>
